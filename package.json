{
  "name": "fullstacktemplate",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "start": "node ./server/port",
    "start:dev": "npm run start-server & npm run build:dev",
    "start-server": "nodemon ./server/port --ignore public/ --ignore client/",
    "build:dev": "npm run build -- --watch --mode=development",
    "build": "webpack",
    "test": "jest --detectOpenHandles",
    "test:dev": "npm run test -- --watch",
    "lint": "./node_modules/.bin/eslint $(pwd)/. --fix",
    "format:client": "prettier --write --single-quote --semi \"client/**/*.js\"",
    "format:tests": "prettier --write --single-quote --semi \"tests/**/*.js\"",
    "format:server": "prettier --write --single-quote --semi \"server/**/*.js\"",
    "format": "npm run format:tests && npm run format:server",
    "prepare": "husky install"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/AnnaLitovskaya/FullstackTemplate.git"
  },
  "keywords": [],
  "author": "Anna Litovskaya",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/AnnaLitovskaya/FullstackTemplate/issues"
  },
  "homepage": "https://github.com/AnnaLitovskaya/FullstackTemplate#readme",
  "devDependencies": {
    "eslint": "^8.6.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-jest": "^25.3.4",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.28.0",
    "eslint-plugin-react-hooks": "^4.3.0",
    "husky": "^7.0.0",
    "jest": "^27.4.7",
    "lint-staged": "^12.1.7",
    "nodemon": "^2.0.15",
    "prettier": "^2.5.1",
    "prettier-eslint": "^13.0.0",
    "prettier-eslint-cli": "^5.0.1"
  },
  "dependencies": {
    "express": "^4.17.2",
    "morgan": "^1.10.0",
    "pg": "^8.7.1",
    "sequelize": "^6.12.5"
  },
  "lint-staged": {
    "*.{js,jsx}": "npm run lint --cache --fix",
    "*.{js,jsx,css}": "npm run format --write"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && npm run test"
    }
  }
}
